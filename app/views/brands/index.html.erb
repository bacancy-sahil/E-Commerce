
<%if current_user%>
<%if current_user.has_role? :admin%>

<h1> All Brands</h1>
<table  class="table table-dark" style="text-align: center;">
  <thead>
    <tr>
      <th scope="col">Brand Name</th>
      <th scope="col">Subscription</th>
      <th scope="col">Starting Date</th>
      <th scope="col">Ending Date</th>
      <th scope="col">Status</th>  
      <th colspan="2">Manage Brands</th>
    </tr>
  </thead>

  <tbody>
    <% @brand.each do |brand| %>
    <tr>
      <td><%= brand.name %></td>
      <td><%= brand.subscription.description %></td>
      <td><%= brand.startingdate %></td>
      <td><%= brand.endingdate %></td>
      <%if brand.status==0 ; status="Pendding";elsif(brand.status==1);status="running";elsif(brand.status==2);status="DeActivated";else status="";end%>
      <td><%= status %></td>  
      <td><%= link_to 'Edit', edit_brand_path(brand), :class => 'btn btn-sm btn-outline-success'%></td>
      <td><%= button_to 'Destroy',brand, :method => :delete, data: { confirm: 'Are you sure?'},:class => 'btn btn-outline-danger btn-sm' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

</table>

<br>


<%end%>
<%else%>  
<%=render file: 'public/404'%>
<%end%>