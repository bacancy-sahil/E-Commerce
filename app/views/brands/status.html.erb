<% if current_user && current_user.has_role? :admin %>
  <h1>Welcome You are in Index Page</h1>
  <h1> All Brands</h1>
  <table>
    <thead>
      <tr>
        <th>Brand Name</th>
        <th>Subscription</th>
        <th>Starting Date</th>
        <th>Ending Date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.subscription.description %></td>
        <td><%= brand.startingdate %></td>
        <td><%= brand.endingdate %></td>
        <% brand.status == 0; status = 'Pending'; elsif(brand.status == 1); status='running'; elsif(brand.status == 2); status='DeActivated'; else status=''; end %>
        <td><%= status %></td>
        <td><%= link_to 'Show', brand_path(brand)  %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Brand', new_brand_path %>
<% else %>
  <%= render file: 'public/404' %>
<% end %>
