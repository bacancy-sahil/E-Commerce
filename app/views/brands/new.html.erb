<%if current_user%>
<%if current_user.has_role? :admin%>


<%= form_with model: @user, url: client_create_path, :html => {:method => :post} do |user_form| %>
<div class="form-group row">
  <%= user_form.label :email,:class=>'col-sm-4' %>
  <%= user_form.text_field :email ,:class=>'col-sm-8'%>
</div>

<div class="form-group row">
  <%= user_form.label :password,:class=>'col-sm-4' %>
  <%= user_form.password_field :password ,:class=>'col-sm-8'%>
</div>

<%= user_form.fields_for @user.build_brand do |form| %>

  <div class="form-group row">
    <%= form.label :Subscription_name ,:class=>'col-sm-4'%>  
    <%= form.select(:subscription_id, options_from_collection_for_select(Subscription.all, :id, :description), {:class=>'form-control col-sm-8', :prompt => 'Select Subscription'}) %>
  </div>
  <div class="form-group row">
    <%= form.label :brand_name,:class=>'col-sm-4' %>
    <%= form.text_field :name ,:class=>'col-sm-8'%>
  </div>
<% end %>
<div class="form-group row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
  <%= user_form.submit %>
</div>
 <div class="col-sm-4"></div>
</div>
<% end %>


<%end%>
<%else%>  
<%=render file: 'public/404'%>
<%end%>