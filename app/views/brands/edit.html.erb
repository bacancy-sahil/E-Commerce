<% if current_user %>
  <% if current_user.has_role? :admin %>
    <%= render 'layouts/header' %>
    <h4>Update Brand</h4>
    <%= form_with(model: @brand, local: true) do |form| %>
      <div class="form-group row">
        <%= form.label :name, class: 'col-sm-4' %>
        <%= form.text_field :name, readonly: true, class: 'col-sm-8' %>
      </div>
      <% brand = @brand.subscription_id %>
      <%= hidden_field_tag(:subscription_id, brand) %>
      <div class="form-group row">
        <%= form.label :status, class: 'col-sm-4' %>
        <%= form.select(:status, options_for_select([['Pendding', 0],['Active', 1],['DeActivate', 2]]))%>
      </div>
      <div class="form-group row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4"><%= form.submit 'Update Brand', class: 'btn btn-success center' %></div>
        <div class="col-sm-4"></div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= render file: 'public/404' %>
<% end %>

