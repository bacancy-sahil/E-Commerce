<%if current_user%>
<%if current_user.has_role? :admin%>

<h4>Update Subscription</h4>
<%= form_with(model: @subscription, local: true) do |form| %>

<div class="form-group row">
  <%= form.label :description,:class=>'col-sm-4' %>
  <%= form.text_area :description ,:class=>'col-sm-8'%>
</div>

<div class="form-group row">
  <%= form.label :Price ,:class=>'col-sm-4'%>
  <%= form.number_field :price ,:class=>'col-sm-8'%>
</div>

<div class="form-group row">
  <%= form.label :numberofproducts ,:class=>'col-sm-4'%>
  <%= form.number_field :numberofproducts ,:class=>'col-sm-8'%>
</div>

<div class="form-group row">
  <%= form.label :duration ,:class=>'col-sm-4'%>
  <%= form.number_field :duration ,:class=>'col-sm-8'%>
</div>

<div class="form-group row">
 <%= form.label :status ,:class=>'col-sm-4' %>
 <%= form.check_box(:status, { class: 'col-sm-1' }, 1, 0)  %>
 <%#= form.check_box(:status,{},checked_value:true,:checked) %>
</div>

<div class="form-group row">
  <div class="col-sm-4"></div> 
  <div class="col-sm-4"><%= form.submit 'Update Subscription',:class => 'btn btn-success center'%></div>
  <div class="col-sm-4"></div>
</div>
<% end %>


<%end%>
<%else%>  
<%=render file: 'public/404'%>
<%end%>