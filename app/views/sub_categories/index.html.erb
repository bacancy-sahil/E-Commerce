<% if current_user %>
  <% if current_user.has_role? :admin %>
    <%= render 'layouts/header' %>
      <h1> All Category</h1>
      <table class="table table-dark" style="text-align: center;">
        <thead>
          <tr>
            <th scope="col">Sub-Category Name</th>
            <th scope="col">Category Name</th>
            <th scope="col">Status</th>
            <th colspan="2" scope="col">Manage Sub-Category</th>
          </tr>
        </thead>
        <tbody>
          <% @subCategory.each do |subCategory| %>
          <tr>
            <td><%= subCategory.category.name %></td>
            <td><%= subCategory.name %></td>
            <% if subCategory.status==true ; status="Active";elsif(subCategory.status==false);status="InActive";else status="";end %>
            <td><%= status %></td>
            <td><%= link_to 'Edit', edit_sub_category_path(subCategory), class: 'btn btn-sm btn-outline-success' %></td>
            <td>
              <%= button_to 'Destroy',subCategory, method: :delete, data: { confirm: 'Are you sure?'},:class => 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <br>
    <%= link_to 'New Sub-Category', new_sub_category_path , class: 'btn btn btn-success' %>
  <% end %>
<% else %>
  <%= render file: 'public/404' %>
<% end %>
