<%if current_user%>
<%if current_user.has_role? :admin%>

<div class="container">
  <h4>Add Sub-Category</h4>

  <%= form_with(model: @subCategory, local: true) do |form| %>

  <div class="form-group row">
    <%= form.label :Category_Name ,:class=>'col-sm-4' %>	
    <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), {:class=>'form-control col-sm-8', :prompt => 'Select Category'}) %>
  </div>

  <div class="form-group row">
    <%= form.label :name,:class=>'col-sm-4' %>
    <%= form.text_field :name,:class=>'col-sm-8' %>
  </div>

<div class="form-group row">
   <%= form.label :status ,:class=>'col-sm-4' %>
  <%= form.check_box(:status, { class: 'col-sm-1' }, 1, 0)  %>
  <%#= form.check_box(:status,{},checked_value:true,:checked) %>
</div>

  <div class="form-group row">
    <div class="col-sm-4"></div> 
    <div class="col-sm-4"><%= form.submit 'Add Sub-Category',:class => 'btn btn-success center'%></div>
    <div class="col-sm-4"></div> 
    
  </div>

<% end %>
</div>

<%end%>
<%else%>  
<%=render file: 'public/404'%>
<%end%> 