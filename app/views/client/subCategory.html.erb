<input id="myInput" type="text" placeholder="Search Product.." style="margin-left: 800px;">
<div class="container">
  <div style=" display: grid; grid-template-columns: auto auto auto;padding: 10px;">
    <% @products.each do |product| %>
    <div class="grid-item">
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <%= image_tag(product.image1, class: 'card-img-top') if product.image1.attached? %>
          <div class="card-body">
            <a href="/client/product?id=<%= product.id %>">
              <h5 class="card-title"><%= product.name %></h5>
            </a>
            <a href="/client/brand?id=<%= product.brand.id %>">
              <h6 class="card-subtitle mb-2 text-muted"><%= product.brand.name %></h6>
            </a>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text"><%= product.price %></p>
            <% if user_signed_in? %>
            <% @cart = cart(product) %>
              <% if @cart.present? %>
              <div class="center"><a href="/client/cart" class="btn btn-primary" style="margin-left: 50px;">Go To Cart</a>
              </div>
              <% else %>
              <div class="center"><a href="/client/AddToCart?productId=<%= product.id %>" class="btn btn-primary"
                  style="margin-left: 50px;">Add To Cart</a></div>
              <% end %>
            <% else %>
              <div class="center"><a href="/users/sign_in" class="btn btn-primary" style="margin-left: 50px;">Add To Cart</a></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<script>
  $(document).ready(function () {
    $("#myInput").on("keyup", function () {
      var value = $(this).val().toLowerCase();
      $(".container .grid-item").filter(function () {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>
