<% if user_signed_in? %>
  <div class="container">
    <input class="form-control" type="text" id="id" value="<%= current_user.id %>" hidden>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email:</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" value="<%= current_user.email %>" readonly>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">First Name:</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="fname" value="<%= current_user.firstname %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Last Name:</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="lname" value="<%= current_user.lastname %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Phone Number:</label>
      <div class="col-sm-10">
        <input class="form-control" type="number" id="phone" value="<%= current_user.phone_number %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Address:</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="5" id="address" value=""><%= current_user.address %></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Pincode:</label>
      <div class="col-sm-10">
        <input class="form-control" type="number" id="pincode" value="<%= current_user.pincode %>" id="pincode">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-5"></div>
      <div class="col-sm-2"><button id="button" class="btn btn-primary">Update</button></div>
      <div class="col-sm-5"></div>
  </div>
<% end %>
  <script type="text/javascript">
    $("#button").on('click', function () {
      var id = $("#id").val();
      var fname = $("#fname").val();
      var lname = $("#lname").val();
      var pnumber = $("#phone").val();
      var address = $("#address").val();
      var pincode = $("#pincode").val();
      var url = "/client/updateProfile";
      $.ajax({
        type: "get",
        url: url,
        data: {
          "id": id,
          "fname": fname,
          "lname": lname,
          "pnumber": pnumber,
          "address": address,
          "pincode": pincode
        },
        datatype: 'script',
        async: false,
        success: function (data) {
          alert("Hii");
        }
      });
    });
  </script>
  