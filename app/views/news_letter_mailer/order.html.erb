<article>
<%binding.pry%>
<h1>Your Order</h1>
<h5>Time : <%= @cart.created_at %></h5>
<h5>Name : <%= @cart.user.firstname %></h5>
<hr>
<h5>Phone No. : <%= @cart.phone_number %></h5>
<h5>Email : <%= @cart.user.email %></h5>
<hr>
<table class="table">
<thead class="thead-dark">
<th>Quantity</th>
<th>Product Name</th>
<th>Price</th>
<th>Cost</th>
</thead>
<%total=0%>
<% @cart.each do |cart| %>
<tr>
<td><%= cart.quantity %></td>
<td><%= cart.product.name %></td>
<td><%= cart.product.price %></th>
  <%val=cart.quantity * cart.product.price%>
  <% total = total + val %>
<td><%= number_to_currency(val) %></td>
</tr>
<% end %>
<tfoot>
<tr>
<th colspan="3">Total:</th>
<td class="price"><%= number_to_currency(total) %></td>
</tr>
</tfoot>
</table>
<hr>

</article>