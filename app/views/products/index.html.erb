        <%= image_tag(product.image1,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image1.attached?%>
      </td>
      <td>
        <%= image_tag(product.image2,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image2.attached?%>
      </td>
      <td>
        <%= image_tag(product.image3,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image3.attached?%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<% end %>
<% else %>
<%= render file: 'public/404' %>
<% end %>
