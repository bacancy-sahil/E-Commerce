<%if current_user%>
<%if current_user.has_role? :brand%>
<h1> All Products</h1>
<table class="table table-dark" style="text-align: center;">
  <thead>
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Desc</th>
      <th scope="col">Quentity</th>
      <th scope="col">Status</th>
      <th scope="col">Image1</th>
      <th scope="col">Image2</th>
      <th scope="col">Image3</th>
      <th colspan="3" scope="col">Manage Sub-Category</th>
    </tr>
  </thead>
  <tbody>
    <% a = current_user.id %>
    <%@products = product(a) %>
    <%@products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= product.quentity %></td>
      <%if product.status==true ; status="Active";elsif(product.status==false);status="InActive";else status="";end%>
      <td><%= status %></td>
      <td>
        <%= image_tag(product.image1,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image1.attached?%>
      </td>
      <td>
        <%= image_tag(product.image2,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image2.attached?%>
      </td>
      <td>
        <%= image_tag(product.image3,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if product.image3.attached?%>
      </td>
      <td><%= link_to 'Show', product_path(product)  %></td>
      <td><%= link_to 'Edit', edit_product_path(product),:class => 'btn btn-sm btn-outline-success' %></td>
      <td>
        <%= button_to 'Destroy',product, method: :delete, data: { confirm: 'Are you sure?'},:class => 'btn btn-outline-danger btn-sm' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%@brand=Brand.find(a)%>
<%  if @brand.subscription.numberofproducts > @products.count%>
<%= link_to 'New Product', new_product_path ,:class =>'btn btn btn-success'%>
<%else%>
<%="You reach to add Maximum Number Of Products."%>
<%end%>

<%end%>

<%if current_user.has_role? :admin%>
<p id="notice"><%= notice %></p>

