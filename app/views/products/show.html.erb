<% if current_user %>
<% if current_user.has_role? :brand %>
<p>
  <strong>Category Name:</strong>
  <%= @product.category.name %>
</p>
<p>
  <strong>SubCategory Name:</strong>
  <%= @product.sub_category.name%>
</p>
<p>
  <strong>Brand Name:</strong>
  <%= @product.brand.name%>
</p>
<p>
  <strong>Product Name:</strong>
  <%= @product.name%>
</p>
<p>
  <strong>Image 1:</strong>
  <%= image_tag(@product.image1,style:"width: 50px;height: 50px",:class=>'col-sm-8 ') if @product.image1.attached?%>
</p>
<p>
  <strong>Image 2:</strong>
  <%= image_tag(@product.image2,style:"width: 50px;height: 50px",:class=>'col-sm-8') if @product.image2.attached? %>
</p>
<p>
  <strong>Image 3:</strong>
  <%= image_tag(@product.image3,style:"width: 50px;height: 50px",class:'col-sm-8') if @product.image3.attached? %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>
<p>
  <strong>Status:</strong>
  <%= @product.status %>
</p>
<%= link_to 'Edit', edit_product_path(@product) %> ||
<%= link_to 'Back', products_path %>
<% end %>
<% else %>
<%= render file: 'public/404' %>
<% end %>
