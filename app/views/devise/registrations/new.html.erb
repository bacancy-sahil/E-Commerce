<div class="container" style="margin: auto;width: 50%;border: 3px solid green;padding: 10px;text-align: center;">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email ,:class=>'col-sm-4'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>'col-sm-7'%>
  </div>

  <div class="form-group row">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <small>(<%= @minimum_password_length %> characters minimum)</small>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,:class=>'col-sm-7' %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation ,:class=>'col-sm-4'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>'col-sm-7' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>