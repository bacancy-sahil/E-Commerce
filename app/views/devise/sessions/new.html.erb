<div class="container" style="margin: auto;width: 50%;border: 3px solid green;padding: 10px;text-align: center;">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :email ,:class=>'col-sm-4'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>'col-sm-7'%>
  </div>

  <div class="form-group row">
    <%= f.label :password ,:class=>'col-sm-4'%><br />
    <%= f.password_field :password, autocomplete: "current-password" ,:class=>'col-sm-7'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>