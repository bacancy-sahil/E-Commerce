<%= form_with(model: @category, local: true) do |form| %>
<% if @category.errors.any? %>
<ul>
  <% @category.errors.full_messages.each do |message| %>
  <li style="color:red;"><%=message%></li>
  <% end %>
</ul>
<% end %>
<div class="form-group row">
  <%= form.label :name ,:class=>'col-sm-4' %>
  <%= form.text_field :name ,:class=>'col-sm-8' %>
</div>
<div class="form-group row">
  <%= form.label :status ,:class=>'col-sm-4' %>
  <%= form.check_box(:status, { class: 'col-sm-1' }, 1, 0)  %>
  <%#= form.check_box(:status,{},checked_value:true,:checked) %>
</div>
<div class="form-group row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4"><%= form.submit 'Add Category',:class => 'btn btn-success center'%></div>
  <div class="col-sm-4"></div>
</div>
<% end %>
