<% if current_user %>
  <% if current_user.has_role? :admin %>
    <%= render 'layouts/header' %>
    <p>
      <strong>Category Name:</strong>
      <%= @category.name %>
    </p>
    <p>
      <strong>Status:</strong>
      <%= @category.status %>
    </p>
    <%= link_to 'Edit', edit_category_path(@category) %> ||
    <%= link_to 'Back', categories_path %>
  <% end %>
<% else %>
  <%= render file: 'public/404' %>
<% end %>
