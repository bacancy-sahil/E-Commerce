<%if current_user%>
<%if current_user.has_role? :admin%>
<h4>Update Category</h4>
<%= form_with(model: @category, local: true) do |form| %>
<i class="fab fa-facebook-f fa-3x mx-2"></i>
<div class="form-group row">
  <%= form.label :name ,:class=>'col-sm-4' %>
  <%= form.text_field :name ,:class=>'col-sm-8' %>
</div>

<div class="form-group row">
 <%= form.label :status ,:class=>'col-sm-4' %>
 <%= form.check_box(:status, { class: 'col-sm-1' }, 1, 0)  %>
 <%#= form.check_box(:status,{},checked_value:true,:checked) %>
</div>
<div class="form-group row">
  <div class="col-sm-4"></div> 
  <div class="col-sm-4"><%= form.submit 'Update Category',:class => 'btn btn-success center'%></div>
  <div class="col-sm-4"></div> 

</div>
<% end %>
<%end%>
<%else%>  
<%=render file: 'public/404'%>
<%end%>